<div class="modal fade" id="modalImportExcel" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close waves-effect" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="text-white">&times;</span>
                </button>
                <h4 class="modal-title">Import Excel</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" role="form" id="frmMaintainanceImportExcel">
                    <div class="form-group">
                        <label for="txtName">
                            Choose file:
                        </label>
                        <input type="file" class="form-control" id="fileInputExcel" name="fileInputExcel"/>
                    </div>
                    <div class="form-group">
                        <label>Category</label>
                        <input id="ddlImportExcel" required class="form-control" name="ddlImportExcel" value="">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="btnCancel" type="button" class="btn btn-secondary waves-effect" data-dismiss="modal">Đóng</button>
                <button id="btnImportExcel" type="button" class="btn btn-primary waves-effect">Lưu lại</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <!-- Model animation js -->
    <script type="text/javascript" src="~/admin-side/bower_components/classie/js/classie.js"></script>
    <script src="~/admin-side/plugins/ModalWindowEffects/js/modalEffects.js"></script>
    <!-- custom js -->
    <script src="~/admin-side/pages/modal.js"></script>
}

@section Styles {
    <!-- Modal animation CSS -->
    <link rel="stylesheet" type="text/css" href="~/admin-side/plugins/modal/css/component.css">
    <!-- Responsive.css-->
    <link rel="stylesheet" type="text/css" href="~/admin-side/css/responsive.css">
}