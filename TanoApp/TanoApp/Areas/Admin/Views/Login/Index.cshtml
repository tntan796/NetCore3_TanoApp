    <!-- Required Jqurey -->
    <script type="text/javascript" src="~/admin-side/bower_components/jquery/js/jquery.min.js"></script>
    <script type="text/javascript" src="~/admin-side/bower_components/jquery-ui/js/jquery-ui.min.js"></script>
    <!-- tether.js -->
    <script type="text/javascript" src="~/admin-side/bower_components/popper.js/js/popper.min.js"></script>
    <!-- waves effects.js -->
    <script src="~/admin-side/plugins/waves/js/waves.min.js"></script>
    <!-- Required Framework -->
    <script type="text/javascript" src="~/admin-side/bower_components/bootstrap/js/bootstrap.min.js"></script>
    <!-- Custom js -->
    <script type="text/javascript" src="~/admin-side/pages/elements.js"></script>
    <script type="text/javascript" src="~/admin-side/js/common-pages.min.js"></script>

    <!-- Notification -->
    <script src="~/admin-side/plugins/notification/js/bootstrap-growl.min.js"></script>
    <script src="~/app/shared/custom-notification.js"></script>

    <script src="~/app/controllers/login/index.js"></script>
    <script src="~/app/shared/tano.js"></script>
    <script>
        var login = new loginControllerJS();
        login.initialize();
    </script>
</body>
</html>
