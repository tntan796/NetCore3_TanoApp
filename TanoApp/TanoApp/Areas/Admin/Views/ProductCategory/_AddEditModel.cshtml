<div class="modal fade" id="modalAddEdit" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close waves-effect" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Thêm nhóm danh mục</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" role="form"  id="frmMaintainance">
                    <div class="form-group">
                        <input type="hidden" id="hideIdMenu" value="0" />
                        <label for="txtNameM">Tên nhóm</label>
                        <input type="text" name="txtNameM" class="form-control" id="txtNameM" placeholder="Tên nhóm" />
                    </div>
                    <div class="form-group">
                        <label for="ddlCategoryIdM">Nhóm cha</label><br/>
                        <input name="ddlCategoryIdM" class="form-control w-100" id="ddlCategoryIdM" />
                    </div>
                    <div class="form-group">
                        <label for="txtAliasM">Alias</label>
                        <input type="text" name="txtAliasM" class="form-control" id="txtAliasM" />
                    </div>
                    <div class="form-group">
                        <label for="txtDescM">Mô tả</label>
                        <textarea rows="3" name="txtDescM" class="form-control" id="txtDescM"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="txtOrderM">Thứ tự sắp xếp</label>
                        <input type="number" value="0" name="txtOrderM" class="form-control" id="txtOrderM" placeholder="Thứ tự sắp xếp"/>
                    </div>
                    <div class="form-group">
                        <label for="txtHomeOrderM">Thứ tự trang chủ</label>
                        <input type="number" value="0" name="txtHomeOrderM" class="form-control" id="txtHomeOrderM" placeholder="Thứ tự trang chủ"/>
                    </div>
                    <div class="form-group">
                        <label for="txtImage">Ảnh</label>
                        <input type="text" name="txtImage" class="form-control" id="txtImage" />
                        <input type="file" id="fileInputImage" style="display:none" />
                        <span class="input-group-btn">
                            <input type="button" id="btnSelectImg" class="btn btn-default waves-effect" value="Chọn ảnh" />
                        </span>
                    </div>
                    <div class="form-group">
                        <label for="txtSeoPageTitleM">Tiêu đề SEO</label>
                        <input type="text" name="txtSeoPageTitleM" class="form-control" id="txtSeoPageTitleM" placeholder="Tiêu đề SEO" />
                    </div>
                    <div class="form-group">
                        <label for="txtUrlSeoM">URL SEO</label>
                        <input type="text" name="txtUrlSeoM" class="form-control" id="txtUrlSeoM" placeholder="Tiêu đề SEO" />
                    </div>
                    <div class="form-group">
                        <label for="txtSeoKeywordM">Từ khóa SEO</label>
                        <input type="text" name="txtSeoKeywordM" class="form-control" id="txtSeoKeywordM" placeholder="Tiêu đề SEO" />
                    </div>
                    <div class="form-group">
                        <label for="txtSeoKeywordM">Từ khóa SEO</label>
                        <input type="text" name="txtSeoKeywordM" class="form-control" id="txtSeoKeywordM" placeholder="Từ khóa SEO" />
                    </div>
                    <div class="form-group">
                        <label for="txtSeoKeywordM">Mô tả SEO</label>
                        <input type="text" name="txtSeoKeywordM" class="form-control" id="txtSeoDescriptionM" placeholder="Mô tả SEO" />
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" checked="checked" id="ckStatusM" />
                                <span class="text">Kích hoạt</span>
                            </label>
                            <label>
                                <input type="checkbox" id="ckShowHomeM" />
                                <span class="text">Show trang chủ</span>
                            </label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="btnCancel" type="button" class="btn btn-secondary waves-effect" data-dismiss="modal">Đóng</button>
                <button id="btnSave" type="button" class="btn btn-primary waves-effect">Lưu lại</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Model animation js -->
    <script type="text/javascript" src="~/admin-side/bower_components/classie/js/classie.js"></script>
    <script src="~/admin-side/plugins/ModalWindowEffects/js/modalEffects.js"></script>
    <!-- custom js -->
    <script src="~/admin-side/pages/modal.js"></script>
}

@section Styles {
    <!-- Modal animation CSS -->
    <link rel="stylesheet" type="text/css" href="~/admin-side/plugins/modal/css/component.css">
    <!-- Responsive.css-->
    <link rel="stylesheet" type="text/css" href="~/admin-side/css/responsive.css">
}