
@{
    ViewData["Title"] = "Danh mục sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link href="~/admin-side/plugins/jquery-easyui-1.9.9/themes/material-blue/easyui.css" rel="stylesheet" />
    <link href="~/admin-side/plugins/jquery-easyui-1.9.9/themes/icon.css" rel="stylesheet" />
}

@section Scripts{
    <script src="~/admin-side/plugins/jquery-easyui-1.9.9/jquery.easyui.min.js"></script>
    <script src="~/app/controllers/product-category/index.js"></script>
    <script>
        var productCategory = new productCategory();
        productCategory.initialize();
    </script>
}

<div class="card" id="resp-table">
    <div class="card-header"><h5 class="card-header-text">Danh sách danh mục sản phẩm</h5></div>
    <div class="card-block">
        <div class="row">
            <div class="col-md-12 form-group text-right">
                   <button class="btn btn-primary waves-effect" id="btnCreate" type="button">Thêm mới</button>
            </div>
        </div>
        <div class="row">
            <ul id="treeProductCategory"></ul>
            <div id="contextMenu" class="easyui-menu" style="width: 200px">
                <div id="btnEdit" data-options="iconCls:'icon-edit'">Sửa</div>
                <div id="btnDelete" data-options="iconCls:'icon-remove'">Xóa</div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_AddEditModel.cshtml")